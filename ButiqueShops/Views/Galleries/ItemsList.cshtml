@model List<ButiqueShops.Models.Items>

@{
    ViewBag.Title = "Items";
}

<div class="container first">
    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];
        if (i % 4 == 0)
        {
            @:<div class="row">
        }
        <div class="col-sm-3">
            <a href="/galleries/item?id=@item.Id">
                <img class="img-responsive imgLogo" src="@item.SmallImagePath" />
            </a>
        </div>
        if (i % 4 == 3)
        {
            @:</div>
        }
    }
</div>

@section Scripts{

    <link rel="stylesheet" href="~/Content/Galleries/gallerystyle.min.css" />
}