    {
        <section class="row">
            <div class="col-md-3"><a href="~/Galleries/shops">Shops List</a></div>
            <div class="col-md-3"><a href="/ItemsToSubmit/Index">Items To Submit</a></div>
            <div class="col-md-3"><a href="">Shops Items</a></div>
            <div class="col-md-3"><a href=""></a></div>
