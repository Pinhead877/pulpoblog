@model IEnumerable<ButiqueShops.Models.Items>

@{
    ViewBag.Title = "Index";
}
<div class="container first">
    @if (ViewBag.shopName == null)
    {
        <h2>Items</h2>
    }
    else
    {
        <h2>Items in @ViewBag.shopName</h2>
    }

    <p>
        @if (ViewBag.shopId == null)
        {
            @Html.ActionLink("Create New", "Create")
        }
        else
        {
            @Html.ActionLink("Create New", "Create", new { shopId = ViewBag.shopId })
        }
    </p>
    <table class="table">
        <tr>
            <th>
                Item Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                Type
            </th>
            @if (ViewBag.shopName == null)
            {
                <th>
                    Shop Name
                </th>
            }
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemTypes.Name)
                </td>
                @if (ViewBag.shopName == null)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Shops.Name)
                    </td>
                }
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>