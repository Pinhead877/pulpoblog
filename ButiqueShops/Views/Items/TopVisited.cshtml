@model IEnumerable<ButiqueShops.ViewModels.ItemsViewModel>

@{
    ViewBag.Title = "Top 10 Visited Items";
}
<div class="container first">

    <h2>Top 10 Visited Items</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Item Type
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumOfVisits)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemTypes.Name)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.NumOfVisits)
                </th>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Item", "Galleries", new { id = item.Id }, null) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>